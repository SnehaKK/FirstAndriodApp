<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_site"
        android:onClick="gotoSite" />
        
    <TextView
        android:id="@+id/enter_stock_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_stock_symbol"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edit_message" />

    <Button
        android:id="@+id/button_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_stock" 
        android:onClick="checkStock"/>
    <!--
    <GridView
        android:id="@+id/gridView1"
